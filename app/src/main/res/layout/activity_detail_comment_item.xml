<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="@dimen/margin_small"
>

    <ImageView
            android:id="@+id/detail_activity_item_user_picture"
            android:layout_width="35dp"
            android:layout_height="35dp"
    />

    <TextView
            android:id="@+id/detail_activity_item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/detail_activity_item_user_picture"
    />

    <TextView
            android:id="@+id/detail_activity_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small"
            app:layout_constraintTop_toBottomOf="@id/detail_activity_item_user_name"
            app:layout_constraintStart_toStartOf="@id/detail_activity_item_user_name"
    />

    <TextView
            android:id="@+id/detail_activity_item_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/detail_activity_item_date"
            app:layout_constraintStart_toStartOf="@id/detail_activity_item_user_name"
    />

    <ImageButton
            android:id="@+id/detail_activity_item_icon_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/actionOverflowButtonStyle"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_activity_item_comment_text"
    />

</androidx.constraintlayout.widget.ConstraintLayout>