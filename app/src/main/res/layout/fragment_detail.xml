<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".Controllers.Fragments.DetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/detail_fragment_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent=".5"
        />

        <include
                app:layout_constraintTop_toBottomOf="@id/detail_fragment_image"
                layout="@layout/social_view"
        />

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/fragment_detail_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:clickable="true"
                app:backgroundTint="@color/button_favorite"
                android:src="@drawable/ic_favorite_border_white_24dp"
                app:layout_anchor="@id/detail_fragment_image"
                app:layout_anchorGravity="bottom|right|end"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>